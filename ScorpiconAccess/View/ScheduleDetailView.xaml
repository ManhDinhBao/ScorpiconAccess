<UserControl x:Class="ScorpiconAccess.View.ScheduleDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ScorpiconAccess.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel Background="White">
        <StackPanel Orientation="Vertical" DockPanel.Dock="Top">
            <StackPanel Orientation="Horizontal">
                <StackPanel Margin="20,10,0,0" Orientation="Vertical" >
                    <TextBlock Text="ID No" FontFamily="Arial" FontWeight="SemiBold"/>
                    <Border HorizontalAlignment="Left" Width="150" Height="22" BorderThickness="1" BorderBrush="Gray" Margin="0,2,0,0">
                        <TextBox x:Name="tbScheduleId" Margin="2,0,2,0" BorderThickness="0" VerticalAlignment="Center" HorizontalAlignment="Stretch" FontSize="12" FontFamily="Arial" Foreground="#888888" TextChanged="tbDeviceId_TextChanged"/>
                    </Border>
                </StackPanel>
                <StackPanel Margin="20,10,0,0" Orientation="Vertical" >
                    <TextBlock Text="ID No" FontFamily="Arial" FontWeight="SemiBold"/>
                    <Border HorizontalAlignment="Left" Width="150" Height="22" BorderThickness="1" BorderBrush="Gray" Margin="0,2,0,0">
                        <TextBox x:Name="tbScheduleName" Margin="2,0,2,0" BorderThickness="0" VerticalAlignment="Center" HorizontalAlignment="Stretch" FontSize="12" FontFamily="Arial" Foreground="#888888" TextChanged="tbDeviceId_TextChanged"/>
                    </Border>
                </StackPanel>
            </StackPanel>
            <StackPanel Margin="20,10,0,10" Orientation="Vertical" >
                <TextBlock Text="Description" FontFamily="Arial" FontWeight="SemiBold"/>
                <Border Width="320" Height="50" BorderThickness="1" BorderBrush="Gray" HorizontalAlignment="Left" Margin="0,2,0,0">
                    <RichTextBox x:Name="rtbDescription" Margin="5" BorderThickness="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" FontSize="12" FontFamily="Arial" Foreground="#888888" TextChanged="rtbDescription_TextChanged">
                        <RichTextBox.Resources>
                            <Style TargetType="{x:Type Paragraph}">
                                <Setter Property="Margin" Value="0"></Setter>
                            </Style>
                        </RichTextBox.Resources>
                    </RichTextBox>
                </Border>
            </StackPanel>
        </StackPanel>
        <Grid>
            <TabControl HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="15">
                <TabItem Header="Monday" IsSelected="True">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
                <TabItem Header="Tuesday">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
                <TabItem Header="Wednesday"/>
                <TabItem Header="Thursday"/>
                <TabItem Header="Friday"/>
                <TabItem Header="Saturday"/>
                <TabItem Header="Sunday"/>
            </TabControl>
        </Grid>
    </DockPanel>
</UserControl>
