<UserControl x:Class="ScorpiconAccess.View.ScheduleDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ScorpiconAccess.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="600" Loaded="UserControl_Loaded">
    <DockPanel Background="White">
        <StackPanel Orientation="Vertical" DockPanel.Dock="Top">
            <StackPanel Orientation="Horizontal">
                <StackPanel Margin="20,10,0,0" Orientation="Vertical" >
                    <TextBlock Text="ID No" FontFamily="Consolas" FontWeight="SemiBold"/>
                    <Border HorizontalAlignment="Left" Width="150" Height="22" BorderThickness="1" BorderBrush="Gray" Margin="0,2,0,0">
                        <TextBox x:Name="tbScheduleId" Margin="2,0,2,0" BorderThickness="0" VerticalAlignment="Center" HorizontalAlignment="Stretch" FontSize="12" FontFamily="Arial" Foreground="#888888"/>
                    </Border>
                </StackPanel>
                <StackPanel Margin="20,10,0,0" Orientation="Vertical" >
                    <TextBlock Text="Name" FontFamily="Consolas" FontWeight="SemiBold"/>
                    <Border HorizontalAlignment="Left" Width="150" Height="22" BorderThickness="1" BorderBrush="Gray" Margin="0,2,0,0">
                        <TextBox x:Name="tbScheduleName" Margin="2,0,2,0" BorderThickness="0" VerticalAlignment="Center" HorizontalAlignment="Stretch" FontSize="12" FontFamily="Arial" Foreground="#888888"/>
                    </Border>
                </StackPanel>
            </StackPanel>
            <StackPanel Margin="20,10,0,10" Orientation="Vertical" >
                <TextBlock Text="Description" FontFamily="Consolas" FontWeight="SemiBold"/>
                <Border Width="320" Height="50" BorderThickness="1" BorderBrush="Gray" HorizontalAlignment="Left" Margin="0,2,0,0">
                    <RichTextBox x:Name="rtbDescription" Margin="5" BorderThickness="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" FontSize="12" FontFamily="Arial" Foreground="#888888">
                        <RichTextBox.Resources>
                            <Style TargetType="{x:Type Paragraph}">
                                <Setter Property="Margin" Value="0"></Setter>
                            </Style>
                        </RichTextBox.Resources>
                    </RichTextBox>
                </Border>
            </StackPanel>
        </StackPanel>
        <StackPanel >
            <TabControl HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="550" Margin="20,20,0,0">
                <!--Monday-->
                <TabItem Header="Monday" FontFamily="Consolas" IsSelected="True">
                    <Grid Background="#FFE5E5E5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Height="260">
                        <DataGrid x:Name="gridTabMondayPeriod" HorizontalAlignment="Left" Height="238" Margin="10,10,0,0" VerticalAlignment="Top" Width="350">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Start Time" Binding="{Binding StartTime}" Width="150" />
                                <DataGridTextColumn Header="End Time" Binding="{Binding EndTime}" Width="150"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <ComboBox x:Name="cbTabMondayWeekDay" HorizontalAlignment="Left" Margin="374,164,0,0" VerticalAlignment="Top" Width="161"/>
                        <TextBox TextAlignment="Center" x:Name="cbTabMondaySTime" HorizontalAlignment="Left" Height="23" Margin="374,193,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="70"/>
                        <TextBox TextAlignment="Center" x:Name="cbTabMondayETime" HorizontalAlignment="Left" Height="23" Margin="465,193,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="70"/>
                        <Button x:Name="btTabMondayAddPeriod" HorizontalAlignment="Left" Margin="374,223,0,0" VerticalAlignment="Top" Width="50">
                            <StackPanel Orientation="Horizontal">
                                <Image Width="15" Height="15" Source="..\Icon\new_gray_30px.png"/>
                                <Label Content="Add" FontFamily="Consolas" FontSize="9"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="btTabMondayUptPeriod" HorizontalAlignment="Left" Margin="429,223,0,0" VerticalAlignment="Top" Width="50">
                            <StackPanel Orientation="Horizontal">
                                <Image Width="15" Height="15" Source="..\Icon\save_gray_30px.png"/>
                                <Label Content="Upt" FontFamily="Consolas" FontSize="9"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="btTabMondayDelPeriod" HorizontalAlignment="Left" Margin="485,223,0,0" VerticalAlignment="Top" Width="50">
                            <StackPanel Orientation="Horizontal">
                                <Image Width="15" Height="15" Source="..\Icon\delete_gray_30px.png"/>
                                <Label Content="Del" FontFamily="Consolas" FontSize="9"/>
                            </StackPanel>
                        </Button>
                        <TextBlock Text="-"  FontWeight="Bold" TextAlignment="Center" FontSize="15" HorizontalAlignment="Left" Margin="444,193,0,0" VerticalAlignment="Top" Width="21" Height="23"/>
                    </Grid>
                </TabItem>

